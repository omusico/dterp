package include.validator;

import javax.servlet.*;
import javax.servlet.http.*;
import java.util.*;

public class ValidatorContextListener implements ServletContextListener {

  private ServletContext ctx;

  public  void contextInitialized(ServletContextEvent evt) {
    ctx=evt.getServletContext();
    Factory factory=new Factory();
    HashMap config=factory.getAllConfig();
    ctx.setAttribute("validatorConfig",config);
  }

  public void contextDestroyed(ServletContextEvent evt) {
    ctx.removeAttribute("validatorConfig");  
  }

